<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/bg_icon_dashboard"
    app:cardCornerRadius="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="22dp">

        <TextView
            android:id="@+id/titleArtikel"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_circle_navy_light"
            android:gravity="center"
            android:lines="1"
            android:paddingVertical="4dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/descArtikel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleArtikel"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="3dp"
            android:layout_toStartOf="@id/imagesArtikel"
            android:gravity="start"
            android:lines="2"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/imagesArtikel"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>