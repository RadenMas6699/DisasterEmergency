<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="32dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/bg_icon_dashboard"
    app:cardCornerRadius="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="24dp">

        <TextView
            android:id="@+id/title_berita"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@color/navy_light"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text="Sumatera"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/desc_berita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_berita"
            android:layout_marginTop="8dp"
            android:layout_toStartOf="@id/img_berita"
            android:text="BNPB: Tapanuli Selatan Memiliki
Potensi Bahaya Tanah Longsor ..."
            android:textColor="@color/black" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_berita"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/img_profil_user" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>